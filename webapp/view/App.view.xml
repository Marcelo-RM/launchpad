<mvc:View controllerName="master.launchpad.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m" xmlns:tnt="sap.tnt" 
	xmlns:f="sap.f">
	<Shell id="shell" 
		headerRightText="Marcelo MontalvÃ£o"
		logo="http://extranet.uniaoquimica.com.br/images/u.png"
		title="Launchpad"
		backgroundColor="#666666">
		<tnt:ToolPage id="toolPage">
		<tnt:header>
			<f:ShellBar
				showMenuButton="true"
				homeIcon="sap-icon://sap-ui5"
				showCopilot="true"
				showNotifications="true"
				menuButtonPressed="onMenuButtonPress"
				showProductSwitcher="true"
				notificationsNumber="2">
				<f:menu>
					<Menu>
						<MenuItem text="Flight booking" icon="sap-icon://flight" />
						<MenuItem text="Car rental" icon="sap-icon://car-rental" />
					</Menu>
				</f:menu>
				<f:profile>
					<f:Avatar icon="http://extranet.uniaoquimica.com.br/images/u.png" initials="UQ"/>
				</f:profile>
				<f:searchManager>
					<f:SearchManager/>
				</f:searchManager>
			</f:ShellBar>
		</tnt:header>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="page2">
				<pages id="page">
					<page showHeader="false">
						<GenericTile id="movies" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Movies" subheader="search movies" press="tilePress">
							<TileContent unit="" footer="">
								<NumericContent value="4" icon="sap-icon://video" withMargin="false" />
							</TileContent>
						</GenericTile>

						<GenericTile id="manageProjects" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Gerenciar Projetos" press="tilePress">
							<TileContent unit="Unit" footer="Footer Text">
								<NumericContent value="3"  icon="sap-icon://collaborate"  withMargin="false" />
							</TileContent>
						</GenericTile>
					</page>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
